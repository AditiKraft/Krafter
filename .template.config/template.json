{
  "$schema": "http://json.schemastore.org/template",
  "author": "Aditi Kraft",
  "classifications": [
    "Web",
    "ASP.NET",
    "Blazor",
    "Full-Stack",
    "Vertical Slice Architecture"
  ],
  "identity": "AditiKraft.Krafter.FullStack.Template",
  "name": "AditiKraft Krafter Full-Stack Application",
  "shortName": "krafter",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Krafter",
  "preferNameDirectory": true,
  "symbols": {
    "ProjectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "Krafter",
      "fileRename": "Krafter",
      "defaultValue": "MyApp",
      "description": "The name of the project"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".vs/**",
            ".idea/**",
            "**/bin/**",
            "**/obj/**",
            "**/*.user",
            "**/.DS_Store"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
